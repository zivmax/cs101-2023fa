{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Wall",
                "-Werror",
                "-Wextra",
                "-Wshadow",
                "-Wpedantic",
                "-Wsign-compare",
                "-Wtype-limits",
                "-fno-omit-frame-pointer",
                "-ggdb3",
                "-O0",
                "-std=c++20",
                "-g",
                "-lm",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "To compile C++ code with g++."
